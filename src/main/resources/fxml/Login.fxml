<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miapp.mediaserver.LoginController">
    <Label text="Iniciar Sesión en MediaServer"/>
    <TextField fx:id="emailField" promptText="Email o Nombre de usuario"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin"/>
        <Button fx:id="backButton" text="Volver" onAction="#handleBack"/>
    </HBox>
    <Label fx:id="statusLabel" text=""/>
</VBox>